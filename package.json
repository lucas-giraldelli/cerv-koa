{
  "name": "cerv-koa",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "@koa/router": "^12.0.1",
    "koa": "^2.15.0",
    "koa-bodyparser": "^4.4.1",
    "koa-logger": "^3.2.1",
    "koa2-cors": "^2.0.6",
    "redis": "^4.6.12",
    "ts-node": "^3.3.0",
    "typescript": "^3.5.2"
  },
  "devDependencies": {
    "@types/jest": "^23.3.14",
    "@types/koa": "^2.0.49",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-logger": "^3.1.1",
    "@types/koa__router": "12.0.4",
    "@types/koa2-cors": "^2.0.1",
    "@types/node": "^20.11.16",
    "@types/redis": "^4.0.11",
    "@types/supertest": "^2.0.8",
    "husky": "^1.3.1",
    "jest": "^29.7.0",
    "prettier": "3.2.4",
    "pretty-quick": "^4.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^1.0.0-pre.40"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "ts-node-dev src/server.ts",
    "test": "NODE_ENV=test PORT=7788 jest",
    "test:watch": "npm run test -- --watchAll"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "modulePathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "roots": [
      "<rootDir>/__tests__"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}